{
  "name": "random-assign-python-lambda",
  "version": "1.0.0",
  "description": "AWS Lambda + AWS SAM - Random Assignment API",
  "scripts": {
    "setup": "npm install",
    "local": "sam local start-api --host 0.0.0.0 --port 3000",
    "invoke-local": "sam local invoke RandomAssignFunction --event events/test-event.json",
    "test": "./test-local.sh",
    "build": "sam build",
    "deploy": "sam deploy --guided",
    "deploy-no-confirm": "sam deploy",
    "validate": "sam validate",
    "logs": "sam logs -n RandomAssignFunction --tail",
    "delete": "sam delete"
  },
  "dependencies": {},
  "devDependencies": {},
  "engines": {
    "node": ">=18.0.0"
  }
}

